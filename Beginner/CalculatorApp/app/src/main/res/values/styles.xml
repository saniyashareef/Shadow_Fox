<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Display style -->
    <style name="CalcDisplay">
        <item name="android:background">@drawable/display_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:padding">18dp</item>
    </style>

    <!-- Base black button -->
    <style name="CalcButton">
        <item name="android:background">@drawable/btn_black</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <!-- Operator (orange) -->
    <style name="CalcButton.Operator">
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

</resources>
